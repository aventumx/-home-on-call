
<div class="container ">

  <div class="card mx-auto my-2" style="width: 28rem;">
    <div class="card-body">
      <h5 class="card-title">Sign In</h5>
      <%= form_with(url: session_path, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :email, for: "email" %>
          <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Enter email"%>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, required: true, class: "form-control" %>
        </div>
          <%= f.submit "Sign In", class: "btn btn-primary"%>
      <% end %>
    </div>

  </div>
  </div>